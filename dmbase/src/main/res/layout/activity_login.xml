<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".LoginAct">
    <LinearLayout
        android:id="@+id/login_center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:paddingLeft="17dp"
            android:text="@string/login"
            android:textColor="@color/black"
            android:textSize="24dp" />

        <EditText
            android:id="@+id/login_user_name"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/white"
            android:hint="账号/手机号"
            android:imeOptions="actionNext"
            android:nextFocusForward="@+id/login_user_pwd"
            android:paddingLeft="17dp"
            android:singleLine="true"
            android:textColorHint="@color/text_gry"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginBottom="20dp"
            android:background="@color/text_gry" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/login_user_pwd"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@android:color/white"
                android:hint="@string/pass_word"
                android:inputType="textPassword"
                android:paddingLeft="17dp"
                android:textColorHint="@color/text_gry"
                android:textSize="16sp" />
            <Button
                android:id="@+id/login_verification_code"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginRight="20dp"
                android:text="获取验证码">

            </Button>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:background="@color/text_gry" />
        <TextView
            android:id="@+id/login_verification_code_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机验证码登录"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:textColor="@color/height_gry"
            android:layout_marginRight="15dp">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_login_yellow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle_button"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/btn_red_login"
                android:text="@string/login"
                android:textAllCaps="false"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="免费注册？"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/registered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingLeft="3dp"
                    android:text="点击这儿"
                    android:textColor="@color/red_rep" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_regster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Don\'t have an account?"
                android:textColor="#4B636E" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text=" SignUp Here"
                android:textColor="#4B636E"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>